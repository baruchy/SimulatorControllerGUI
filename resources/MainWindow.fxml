<BorderPane xmlns="http://javafx.com/javafx"
	xmlns:fx="http://javafx.com/fxml/1"
	fx:controller="view.MainWindowController">
	<center>
		<TextArea fx:id="textBox" prefHeight="300.0"
			prefWidth="300.0" BorderPane.alignment="CENTER">
			<padding>
				<Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
			</padding>
			<BorderPane.margin>
				<Insets bottom="50.0" left="50.0" right="30.0" top="50.0" />
			</BorderPane.margin>
		</TextArea>
	</center>
	<top>
		<HBox prefHeight="49.0" prefWidth="690.0"
			BorderPane.alignment="CENTER">
			<children>
				<Button fx:id="connect" cancelButton="true" mnemonicParsing="false"
					onAction="#connect" text="Connect"
					textOverrun="WORD_ELLIPSIS">
					<HBox.margin>
						<Insets bottom="5.0" left="5.0" right="5.0" top="20.0" />
					</HBox.margin>
					<font>
						<Font name="System Bold Italic" size="18.0" />
					</font>
				</Button>				
				
			</children>
			<BorderPane.margin>
				<Insets right="10.0" />
			</BorderPane.margin>
		</HBox>
	</top>
	<left>
	</left>
	<right>
		<BorderPane prefHeight="313.0" prefWidth="300.0"
			BorderPane.alignment="CENTER">
			<top>
				<Text strokeType="OUTSIDE" strokeWidth="0.0"
					text="&lt;-aileron-&gt;" BorderPane.alignment="CENTER">
					<font>
						<Font name="System Bold Italic" size="20.0" />
					</font>
				</Text>
			</top>
			<right>
				<Text rotate="90.0" strokeType="OUTSIDE" strokeWidth="0.0"
					text="&lt;-elevator-&gt;" BorderPane.alignment="CENTER">
					<font>
						<Font name="System Bold Italic" size="20.0" />
					</font>
				</Text>
			</right>
			<center>
				<Group BorderPane.alignment="CENTER">
					<children>

						<Circle fx:id="frame" fill="#fa2a63" radius="100.0"
							stroke="#dad3d3" strokeType="INSIDE" strokeWidth="3.0" />
						<Circle fx:id="joystick" fill="#e4e9ee" radius="37.0"
							stroke="BLACK" strokeType="INSIDE"
							onMouseDragged="#moveElevatorAileron" />

					</children>
					<BorderPane.margin>
						<Insets left="50.0" />
					</BorderPane.margin>
				</Group>
			</center>
			<left>
				<Group BorderPane.alignment="CENTER">
					<children>
						<Slider fx:id="throttle" layoutY="-9.0" max="1.0" min="0"
							blockIncrement="0.05" orientation="VERTICAL" prefHeight="271.0"
							prefWidth="21.0" onMouseDragged="#moveThrottle" />
						<Text layoutX="-45.0" layoutY="121.0" rotate="-90.0"
							strokeType="OUTSIDE" strokeWidth="0.0" text="throttle">
							<font>
								<Font name="System Bold" size="18.0" />
							</font>
						</Text>
					</children>
				</Group>
			</left>
			<bottom>
				<Group BorderPane.alignment="CENTER">
					<children>
						<Slider fx:id="rudder" max="1.0" min="-1.0"
							blockIncrement="0.05" prefHeight="51.0" prefWidth="271.0"
							onMouseDragged="#moveRudder">
							<padding>
								<Insets bottom="30.0" />
							</padding>
						</Slider>
						<Text layoutX="109.0" layoutY="44.0" strokeType="OUTSIDE"
							strokeWidth="0.0" text="rudder">
							<font>
								<Font name="System Bold" size="19.0" />
							</font>
						</Text>
					</children>
				</Group>
			</bottom>
		</BorderPane>
	</right>
</BorderPane>
